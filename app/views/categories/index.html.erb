<p id="notice"><%= notice %></p>

<% if @categories.any? %>
  <h1><%= t('categoriesList') %></h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('lastname') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to t('show'), category %></td>
          <td><%= link_to t('edit'), edit_category_path(category) %></td>
          <td><%= link_to t('destroy'), category, method: :delete, data: { confirm: t('areYouSure') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
<% else %>
  <p><%= t('youHaveNoCategories') %></p>
<% end %>
<br>

<%= link_to t('newCategory'), new_category_path, class: 'btn btn-success' %>
