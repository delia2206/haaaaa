<p id="notice"><%= notice %></p>

<% if @fichiers.any? %>
  <h1><%= t('filesList') %></h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('lastname') %></th>
        <th><%= t('user') %></th>
        <th><%= t('category') %></th>
        <!--<th>Sous cat√©gorie</th>-->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fichiers.each do |fichier| %>
        <tr>
          <td><%= fichier.name %></td>
          <td>
            <% if fichier.utilisateur.nil? %>
              
            <% else %>
              
              <%= fichier.utilisateur.firstName %>
              
            <% end %>
          </td>
          <td>
            <% if fichier.category.nil? %>
              
            <% else %>
              
              <%= fichier.category.name %>
              
            <% end %>
          </td>
          <!--<td>
            <# if fichier.sous_categorie.nil? #>
              
            <# else #>
              
              <#= fichier.sous_categorie.nom #>
              
            <# end #>
          </td>-->
          <td><%= link_to t('show'), fichier %></td>
          <td><%= link_to t('edit'), edit_fichier_path(fichier), class: 'btn btn-info' %></td>
          <td><%= link_to t('destroy'), fichier, method: :delete, data: { confirm: t('areYouSure') }, class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('youHaveNoFiles') %></p>
<% end %>

<br>

<%= link_to t('newFile'), new_fichier_path, class: 'btn btn-success' %>
