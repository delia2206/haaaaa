<p id="notice"><%= notice %></p>

<% if @fichiers.any? %>
  <h1> <%= t('filesList')%></h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('lastname') %></th>
        <th> <%= t('user') %></th>
        <th> <%= t('category') %></th>
        <!--<th>Sous cat√©gorie</th>-->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @fichiers.each do |fichier| %>
        <tr>
          <td><%= fichier.name %></td>
          <td>
            <% if fichier.user.nil? %>
              
            <% else %>
              
              <%= fichier.user.email %>
              
            <% end %>
          </td>
          <td>
            <% if fichier.category.nil? %>
              
            <% else %>
              
              <%= fichier.category.name %>
              
            <% end %>
          </td>
          >td>
            <% if fichier.sous_category.nil? %>
              
            <% else %>
              
              <%= fichier.sous_category.name %>
              
            <% end %>
          </td>
          <td><%= link_to t('show'), fichier %></td>
          <td><%= link_to t('edit'), edit_fichier_path(fichier), class: 'btn btn-info' %></td>
          <td><%= link_to t('destroy'), fichier, method: :delete, data: { confirm: t('areYouSure') }, class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Vous n'avez aucun fichier !</p>
<% end %>

<br>

