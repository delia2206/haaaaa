<%= simple_form_for @utilisateur do |f| %>
  <div class="row">
    <div class="col-lg-5">
      <div class="form-group ">
          <div class="col-lg-8"><%= f.input :name, label: t('lastname'), class:'form-control' %></div>
      </div>
      <div class="form-group ">
          <div class="col-lg-8"><%= f.input :firstName, label: t('firstname'), class:'form-control' %></div>
      </div>
      
      <div class="form-group ">
          <div class="col-lg-8"><%= f.association :role, label: t('role'), class:'form-control' %></div>
      </div>
      
    </div>
  </div>

  <%= f.submit t('save'), class: 'btn btn-primary' %> 
<% end  %>