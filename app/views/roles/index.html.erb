<p id="notice"><%= notice %></p>

<% if @roles.any? %>
  <h1><%= t('rolesList') %></h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th><%= t('lastname') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to t('show'), role %></td>
          <td><%= link_to t('edit'), edit_role_path(role), class: 'btn btn-info' %></td>
          <td><%= link_to t('destroy'), role, method: :delete, data: { confirm: t('areYouSure') }, class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t('youHaveNoRoles') %></p>
<% end %>

<br>

<%= link_to t('newRole'), new_role_path, class: 'btn btn-success' %>
