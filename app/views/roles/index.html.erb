<p id="notice"><%= notice %></p>

<% if @roles.any? %>
  <h1>Listing Roles</h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Nom</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @roles.each do |role| %>
        <tr>
          <td><%= role.name %></td>
          <td><%= link_to 'Show', role %></td>
          <td><%= link_to 'Edit', edit_role_path(role), class: 'btn btn-info' %></td>
          <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-warning' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>Vous n'avez aucun roles !</p>
<% end %>

<br>

<%= link_to 'New Role', new_role_path, class: 'btn btn-success' %>
