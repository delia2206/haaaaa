<% if @users.any? %>
  <h1>Liste des utilisateurs</h1>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td><%= link_to t('show'), user, class: 'btn btn-info' %></td>
          <td><% if current_user.role == "admin" %><%= link_to t('edit'), edit_user_path(user), class: 'btn btn-info' %><% end %></td>
          <td><% if current_user.role == "admin" %><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('areYouSure') }, class: 'btn btn-warning' %><% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
<% else %>
  <p>Aucun utilisateur</p>
<% end %>